{
	"$schema": "http://json-schema.org/draft-04/schema",
	"title": "Sighting Report",
	"description": "Reports on rara animals sighting in England",
	"type":"object",
	"properties": 
	{
		"sighting":
		{ 
			"type":"array",
      "items": 
			{
				"type":"object",
        "properties":
				{
					"id":
					{
						"type":"integer"
					},
					"animal":
					{
						"type":"string",
						"enum":["Beaver", "hare", "Pine Martin", "otter" ,"Snowy Owl"]
					},
					"number":
					{
						"type":"integer"
					},
					"location":
					{
						"type":"string"
					},
					"date":
					{
						"type":"string"
					},
					"time":
					{
						"type":"string"
					},
					"observer":
					{
						"type":"object",
            "properties":
						{
							"name":{"type":"string"},
							"email":{"type":"string"}
            },
            "obersations":{"type":"string"}
					}            
        }    
      }
    }
  }
}
